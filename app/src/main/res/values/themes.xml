<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaskToDo" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#880e4f</item>
        <item name="colorPrimaryVariant">#560027</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#c51162</item>
        <item name="colorSecondaryVariant">#8e0038</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/floatingActionButtonStyle</item>
    </style>

    <style name="floatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/floatingButton</item>
    </style>

    <style name="floatingButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
    </style>
</resources>